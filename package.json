{
    "name": "demo",
    "displayName": "demo",
    "description": "description",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "myfirstlanguage",
                "aliases": [
                    "myfirstlanguage",
                    "myfirstlanguage"
                ],
                "extensions": [
                    ".exp"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "myfirstlanguage",
                "scopeName": "source.myfirstlanguage",
                "path": "./syntaxes/myfirstlanguage.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:myfirstlanguage"
    ],
    "main": "./out/extension.js",
    "langium": {
        "languageId": "myfirstlanguage",
        "grammar": "src/language-server/myfirstlanguage.langium",
        "extensions": [
            ".exp"
        ],
        "out": "src/language-server/generated",
        "textMate": {
            "out": "syntaxes/myfirstlanguage.tmLanguage.json"
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "webpack",
        "watch": "webpack --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate"
    },
    "dependencies": {
        "langium": "^0.1.0",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0"
    },
    "devDependencies": {
        "@types/node": "^14.17.3",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "copy-webpack-plugin": "^9.0.0",
        "eslint": "^7.19.0",
        "langium-cli": "^0.1.0",
        "source-map-loader": "^3.0.0",
        "ts-loader": "^9.2.3",
        "typescript": "^4.1.3",
        "webpack": "^5.39.1",
        "webpack-cli": "^4.7.2"
    }
}
