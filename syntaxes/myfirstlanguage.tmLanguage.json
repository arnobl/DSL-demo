{
  "name": "myfirstlanguage",
  "scopeName": "source.myfirstlanguage",
  "fileTypes": [
    ".exp"
  ],
  "patterns": [
    {
      "name": "keyword.control.myfirstlanguage",
      "match": "\\b(val)\\b"
    },
    {
      "name": "keyword.symbol.myfirstlanguage",
      "match": "(\\-|\\:=|\\*|\\/|\\+)"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.myfirstlanguage",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.myfirstlanguage"
